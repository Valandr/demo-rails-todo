<div class="container">
<h1 class="title"> Create a new Todo </h1>
<%= form_for @todo do |f| %>
    <%= label_tag(:title, "Title:") %>
    <%= f.text_field :title %>
    <%= label_tag(:description, "Description") %>
    <%= f.text_area :description %><br>
    <%= f.submit "Create" %>
<% end %>
</div>